<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
    <!-- 마이바티스 런타임 시 적용될 전역 설정 -->
    <settings>
        <!-- 지연 로딩 비활성화 -->
        <setting name="lazyLoadingEnabled" value="false"/>
        <!-- 스네이크 케이스 표기법 필드명을 카멜 케이스로 매핑 처리 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- 컬럼의 값이 NULL일 경우 setter 또는 맵의 put 메소드 호출을 통해 누락 방지 -->
        <setting name="callSettersOnNulls" value="true"/>
        <!-- 매퍼 네임스페이스 단위로 동작되는 세컨드 레벨 캐시 비활성화 -->
        <setting name="cacheEnabled" value="false"/>
        <!-- 로컬 캐시 적용 범위 변경 (STATEMENT : 명령문(쿼리문)수준)-->
        <setting name="localCacheScope" value="STATEMENT"/>
        <!-- INSERT / UPDATE 진행시 null값이 포함될 경우, 그 값을 'NULL' 로 대체 -->
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>
</configuration>